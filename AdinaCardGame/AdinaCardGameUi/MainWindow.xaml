<Window x:Class="AdinaCardGameUi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdinaCardGameUi"
        mc:Ignorable="d"
        Title="MainWindow" Height="354" Width="388">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="288*"/>
        </Grid.ColumnDefinitions>
        <Button Name="CreateImagesButton" HorizontalAlignment="Left" Margin="132,148,0,0" VerticalAlignment="Top" Width="116" Height="53" Click="Button_Click" Grid.ColumnSpan="2">Create Images</Button>
        <Label Content="Prompt Path" Name="PromptPathLabel"  HorizontalAlignment="Left" Margin="98,45,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="240"/>
        <Label Content="Answer Path&#xD;&#xA;" Name="AnswerPathLabel" HorizontalAlignment="Left" Margin="98,89,0,0" VerticalAlignment="Top"/>
        <ProgressBar Name="ImageCreationProgressBar" HorizontalAlignment="Left" Height="15" Margin="98,242,0,0" VerticalAlignment="Top" Width="195" RenderTransformOrigin="0.01,0.4" Grid.ColumnSpan="2"/>
        <Label Content="Create" x:Name="ImageCreationProgressText" HorizontalAlignment="Left" Margin="98,271,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
